<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<!-- Configuration -->
	<cm:property-placeholder id="placeholder"
		persistent-id="com.estafet.openshift.scrumboard.dao.api"
		update-strategy="reload">
		<cm:default-properties>
			<cm:property name="force.replace" value="00" />
		</cm:default-properties>
	</cm:property-placeholder>

	<service id="StoryDAOImplService" interface="com.estafet.openshift.scrumboard.dao.api.StoryDAO"
		ref="StoryDAOImpl" />
	<bean id="StoryDAOImpl" class="com.estafet.openshift.scrumboard.dao.api.StoryDAOImpl">
	</bean>
	
	<service id="StoryDAOImplService" interface="com.estafet.openshift.scrumboard.dao.api.TaskDAO"
		ref="TaskDAOImpl" />
	<bean id="TaskDAOImpl" class="com.estafet.openshift.scrumboard.dao.api.TaskDAOImpl">
	</bean>
</blueprint>