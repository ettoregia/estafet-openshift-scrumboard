<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">


	<!-- Route Builders -->
	<bean id="storyRoute"
		class="com.estafet.openshift.scrumboard.camel.stories.routebuilders.StoryRoute" >
	</bean>
	<bean id="taskRoute"
		class="com.estafet.openshift.scrumboard.camel.stories.routebuilders.TaskRoute" >
	</bean>
	
	<!--  Processors -->
	
	<bean
		class="com.estafet.openshift.scrumboard.camel.stories.processors.StoryProcessor"
		id="storyProcessor" />

	<bean
		class="com.estafet.openshift.scrumboard.camel.stories.processors.TaskProcessor"
		id="taskProcessor" />
		
</blueprint>